<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="center" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HW4.chat.Controller">
    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

    <TextArea fx:id="chatArea" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox alignment="center" spacing="10">

        <TextField fx:id="messageField" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>

        <Button fx:id="sendBtn"  text="Send" onAction="#sendMessage"/>

        <padding><Insets top="10 "/></padding>

    </HBox>

</VBox>